<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="isel.pdm.serie1.thothNews"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.INTERNET" >
    </uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@drawable/thoth_icon"
        android:label="@string/label_app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".ClassesActivity"
            android:label="@string/title_activity_classes" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".NewsActivity"
            android:label="@string/label_app_name"
            android:parentActivityName=".ClassesActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ClassesActivity" />

            <intent-filter>
                <action android:name=".NewViewActivity" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity
            android:name=".PreferencesActivity"
            android:label="@string/label_activity_preferences"
            android:parentActivityName=".ClassesActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />

            <intent-filter>
                <action android:name=".PreferencesActivity" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NewItemActivity"
            android:label="@string/label_activity_new_view"
            android:parentActivityName=".ClassesActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />

            <intent-filter>
                <action android:name=".NewViewActivity" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
