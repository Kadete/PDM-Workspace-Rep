<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}"
    android:orientation="vertical">

    <TextView
        android:id="@+id/class_news_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/title_news_view"
        android:textStyle="bold|italic"
        android:textSize="24sp"
        android:layout_alignParentTop="true"
        android:theme="@style/AppTheme"
        android:textColor="#ff7b0015"
        android:background="@drawable/tangerine_yelow_grad"
        android:gravity="center"/>

    <View style="@style/Divider"
        android:id="@+id/divider1"
        android:layout_alignBottom="@+id/class_news_title" />

    <ListView
        android:id="@+id/listView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/class_news_title"
        android:layout_centerHorizontal="true"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
    </ListView>

</RelativeLayout>
