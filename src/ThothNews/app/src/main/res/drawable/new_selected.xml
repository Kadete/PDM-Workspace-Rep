<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle">
            <size
                android:width="500dp"
                android:height="40dp" />
            <corners android:radius="0dp"/>
            <gradient
                android:startColor="#ffd1d1d1"
                android:endColor="#44440000"
                android:angle="0"
                android:type="linear"/>
        </shape>
    </item>
    <item
        android:top="-100dp"
        android:bottom="160dp"
        android:right="-300dp">
        <rotate
            android:fromDegrees="45">
            <shape android:shape="rectangle">
                <size android:height="50dp" android:width="0dp"></size>
                <solid android:color="#ffebebeb" />
            </shape>
        </rotate>
    </item>

    <item
        android:top="140dp"
        android:bottom="-150dp"
        android:right="-270dp">
        <rotate
            android:fromDegrees="-45">
            <shape android:shape="rectangle">
                <size android:height="50dp" android:width="0dp"></size>
                <solid android:color="#ffebebeb" />
            </shape>
        </rotate>
    </item>

</layer-list>