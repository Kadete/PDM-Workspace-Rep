<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/item_workItem_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false">
        <LinearLayout
            android:id="@+id/layout_work_item_info"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:padding="5dp"
            android:background="@drawable/grad_light_blue">
            <TextView
                android:id="@+id/item_workItem_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/item_workItem_title"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="40dp"/>
            <TextView
                android:id="@+id/item_workItem_whenStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/item_workItem_whenStart"
                android:textSize="14sp"
                android:textColor="#444444"
                android:layout_marginTop="-3dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"/>
            <TextView
                android:id="@+id/item_workItem_whenDue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/item_workItem_whenDue"
                android:textSize="14sp"
                android:textColor="#444444"
                android:layout_marginTop="-3dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"/>
            <TextView
                android:id="@+id/item_workItem_url"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/item_workItem_url"
                android:visibility="gone"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_work_item_add_event"
            android:background="@drawable/grad_light_gold"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:id="@+id/iv_workitem_event_options"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" />
            </LinearLayout>
    </LinearLayout>
</RelativeLayout>