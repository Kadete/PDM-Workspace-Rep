<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_centerHorizontal="true">
    <TextView
        android:id="@+id/class_item_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/class_item_full_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/class_item_full_name"
            android:textSize="15sp"
            android:textColor="#444444"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"/>
        <TextView
            android:id="@+id/class_item_teacher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/class_item_teacher"
            android:textSize="16.8sp"
            android:textColor="#000000"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/class_item_new_news_ic"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_new_news"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/activity_horizontal_margin"/>
</RelativeLayout>