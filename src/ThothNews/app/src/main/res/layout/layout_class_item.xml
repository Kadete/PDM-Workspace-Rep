<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/class_item_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        />


    <TextView
        android:id="@+id/class_item_full_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/class_item_full_name"

        android:textSize="15sp"
        android:textColor="#666666"/>

    <TextView
        android:id="@+id/class_item_teacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/class_item_teacher"
        android:layout_below="@id/class_item_full_name"
        android:textSize="16.8sp"
        android:textColor="#000000"/>

</RelativeLayout>