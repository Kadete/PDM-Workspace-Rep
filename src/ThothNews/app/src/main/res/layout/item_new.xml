<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/item_new_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
    <CheckBox
        android:id="@+id/item_new_checkread"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false">
        <LinearLayout
            android:id="@+id/layout_new_info"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:padding="5dp">
            <TextView
                android:id="@+id/item_new_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/new_item_title"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="40dp"/>
            <TextView
                android:id="@+id/item_new_when"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/new_item_when"
                android:textSize="14sp"
                android:textColor="#444444"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginTop="-3dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_new_visibility"
            android:background="@drawable/grad_light_gold"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/iv_new_visibility"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_action_visibility"
                android:layout_width="match_parent" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>