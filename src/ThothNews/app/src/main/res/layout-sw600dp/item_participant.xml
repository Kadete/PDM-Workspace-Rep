<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_gravity="center_vertical"
    android:background="@drawable/list_selector"
    android:padding="10dp">
    <TextView
        android:id="@+id/participant_item_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
    <FrameLayout
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center_vertical">
        <com.github.siyamed.shapeimageview.RoundedImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_image_camera"
            app:siRadius="6dp"
            app:siBorderWidth="2dp"
            app:siSquare="true"
            app:siBorderColor="#ff514f55"
            android:id="@+id/student_item_avatar"/>
    </FrameLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:textStyle="bold"
            android:id="@+id/participant_item_number_and_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="@string/participant_item_number_and_group"
            android:textAppearance="?android:attr/textAppearanceLarge" />
        <TextView
            android:id="@+id/participant_item_full_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#444444"
            android:text="@string/participant_item_full_name"
            android:layout_marginTop="-3dp"
            android:textAppearance="?android:attr/textAppearanceLarge" />
        <TextView
            android:id="@+id/participant_item_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>