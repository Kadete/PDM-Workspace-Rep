<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center"
    android:background="#fff"
    android:padding="5dp">
    <TextView
        android:id="@+id/participant_item_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
    <com.github.siyamed.shapeimageview.RoundedImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/ic_image_camera"
        app:siRadius="6dp"
        app:siBorderWidth="2dp"
        app:siSquare="true"
        app:siBorderColor="#ff514f55"
        android:id="@+id/student_item_avatar"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            style="@android:style/Theme.Light"
            android:textStyle="bold"
            android:id="@+id/participant_item_number_and_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17.5sp"
            android:text="@string/participant_item_number_and_group"
            android:textAppearance="?android:attr/textAppearanceLarge" />
        <TextView
            style="@android:style/Theme.Light"
            android:id="@+id/participant_item_full_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="@string/participant_item_full_name"
            android:textAppearance="?android:attr/textAppearanceLarge" />
        <TextView
            style="@android:style/Theme.Light"
            android:id="@+id/participant_item_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>