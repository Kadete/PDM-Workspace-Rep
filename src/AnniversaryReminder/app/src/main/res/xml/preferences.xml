<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:key="preferences_key">
    <PreferenceCategory
        android:title="Anniversary Settings">
        <ListPreference
            android:key="FILTER_PREF_LIST"
            android:title="Filter Settings"
            android:summary="Select the amount of weeks you want to filter the anniversarys"
            android:entries="@array/filterlistentries"
            android:entryValues="@array/filterlistvalues"
            android:defaultValue="14"
            />

        <pt.isel.pdm.grupo17.anniversaryreminder.dialogs.TimePreference
            android:key="schedule_notify_time"
            android:showDefault="true"
            android:title="Notify Time" />

    </PreferenceCategory>

</PreferenceScreen>